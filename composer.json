{
	"name": "oleganto2000/tickets",
	"type": "library",
	"require-dev": {
		"modx/revolution": "v3.1.2-pl",
		"sterc/formit": "dev-3.x",
		"modx-pro/pdotools": "dev-3x-new",
		"phpstan/phpstan": "^2.1",
		"rector/rector": "^2.1",
		"friendsofphp/php-cs-fixer": "^3.87"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/modxcms/revolution.git"
		},
		{
			"type": "package",
			"package": {
				"name": "sterc/formit",
				"version": "dev-3.x",
				"dist": {
					"url": "https://github.com/Sterc/FormIt/archive/refs/heads/3.x.zip",
					"type": "zip"
				}
			}
		}, 
		{
			"type": "package",
			"package": {
				"name": "modx-pro/pdotools",
				"version": "dev-3x-new",
				"dist": {
					"url": "https://github.com/modx-pro/pdotools/archive/refs/heads/3x-new.zip",
					"type": "zip"
				}
			}
		}
	],
	"config": {
		"preferred-install": {
			"*": "dist",
			"modx/revolution": "source"
		}
	},
	"require": {
		"symfony/html-sanitizer": "^7.3"
	},
	"autoload": {
    "psr-4": {
      "Tickets\\": "core/components/tickets/src/"
    }
  },
	"scripts": {
		"phpstan": "phpstan analyse --error-format=raw --no-progress --memory-limit=8G",
		"rector": "rector process --no-progress",
		"rector-dry": "rector process --no-progress --dry-run",
		"phpcsfixer": "php-cs-fixer fix --diff",
		"phpcsfixer-dry": "php-cs-fixer fix --diff --dry-run"
	}
}
